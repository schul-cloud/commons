{
	"name": "@schul-cloud/commons",
	"version": "1.0.17",
	"description": "Helpers and common tools for the hpi school-cloud.",
	"repository": {
		"github": "https: //github.com/schul-cloud/commons"
	},
	"license": "MIT",
	"main": "lib/index.js",
	"homepage": "https://github.com/schul-cloud/commons",
	"scripts": {
		"coverage": "cross-env NODE_ENV=test nyc mocha -r ts-node/register -r tsconfig-paths/register test/**/*.spec.ts",
		"mocha": "NODE_ENV=test mocha -r ts-node/register -r tsconfig-paths/register test/**/*.spec.ts",
		"test": "npm run build && npm run coverage",
		"lint": "eslint . --fix --ext .ts,.js,.json --ignore-path .gitignore",
		"lint:ci": "eslint . --ext .ts,.js,.json --ignore-path .gitignore",
		"build": "rm -rf lib && tsc"
	},
	"publishConfig": {
		"access": "public"
	},
	"devDependencies": {
		"@types/chai": "^4.2.4",
		"@types/mocha": "^7.0.1",
		"@typescript-eslint/eslint-plugin": "^2.23.0",
		"@typescript-eslint/parser": "^2.8.0",
		"chai": "^4.2.0",
		"coveralls": "^3.0.7",
		"cross-env": "^7.0.2",
		"eslint": "^6.8.0",
		"eslint-config-airbnb": "^18.0.1",
		"eslint-config-airbnb-base": "^14.0.0",
		"eslint-plugin-import": "^2.18.2",
		"eslint-plugin-json": "^2.1.0",
		"eslint-plugin-jsx-a11y": "^6.2.3",
		"mocha": "^7.0.1",
		"ts-node": "^8.4.1",
		"tslint": "^5.20.1",
		"tslint-config-airbnb": "^5.11.2",
		"typescript": "^3.7.2"
	},
	"dependencies": {
		"@istanbuljs/nyc-config-typescript": "^1.0.1",
		"@types/config": "0.0.36",
		"@types/dot-object": "^1.7.0",
		"@types/lodash": "^4.14.149",
		"@types/node": "^13.7.1",
		"acorn": "^7.1.1",
		"ajv": "^6.10.2",
		"config": "^3.2.4",
		"dot-object": "^2.1.2",
		"dotenv": "^8.2.0",
		"eslint-plugin-react": "^7.19.0",
		"eslint-plugin-react-hooks": "^1.7.0",
		"lodash": "^4.17.15",
		"nyc": "^15.0.0",
		"tsconfig-paths": "^3.9.0"
	},
	"nyc": {
		"extends": "@istanbuljs/nyc-config-typescript",
		"include": [
			"src/**"
		],
		"reporter": [
			"text",
			"lcov"
		]
	}
}
